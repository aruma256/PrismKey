{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build",
            "problemMatcher": []
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "taskName": "run",
            "command": "java -jar target/prismkey-jar-with-dependencies.jar",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "problemMatcher": []
        }
    ]
}